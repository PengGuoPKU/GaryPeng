class Solution {
public:
    int majorityElement(vector<int>& nums) {
        int candidate = 0;
        int sign = 0;
        for(int i = 0; i < nums.size(); i++)
        {
            if (sign == 0)
                candidate = nums[i];
            else
            {
                if (nums[i] == candidate)
                    sign++;
                else
                    sign--;
            }
        }
        return candidate;
    }
};
